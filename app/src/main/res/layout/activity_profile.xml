<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity">



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_container"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Username"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:id="@+id/tvProfUsername" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/lvProfPlaylists"
                android:layout_marginBottom="27dp"
                android:layout_alignBottom="@+id/bottom_container"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFF"
                android:layout_marginTop="50dp"
                android:layout_weight="0.71"
                android:choiceMode="singleChoice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All Playlists >"
                android:id="@+id/tvViewAllPlaylists"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_below="@+id/tvViewPlaylists"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="viewAllPlaylists" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/btnHome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Home"
            android:background="#434343"
            android:textColor="#D9D9D9"
            android:onClick="bottomBar"
            android:layout_weight="0.30" />

        <Button
            android:id="@+id/btnSearchRes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnHome"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="bottomBar"
            android:text="Search"
            android:background="#434343"
            android:textColor="#D9D9D9"
            android:layout_weight="0.46" />

        <Button
            android:id="@+id/btnYourLibrary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnSearchRes"
            android:text="Your Library"
            android:textColor="#6DFD6F"
            android:background="#434343"
            android:clickable="false"
            android:layout_weight="0.34"
            android:onClick="bottomBar" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/btnLogout"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="logOut" />

</RelativeLayout>
