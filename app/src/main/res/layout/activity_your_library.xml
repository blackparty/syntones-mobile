<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".YourLibraryActivity">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/lvRecentlyPlayed"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/relativeLayout"
        android:background="#FFF9F9F9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlists"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Played"
        android:id="@+id/textView9"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_above="@+id/lvRecentlyPlayed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#434343"
        android:id="@+id/relativeLayout">

        <Button
            android:id="@+id/btnHome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Home"
            android:background="#434343"
            android:textColor="#D9D9D9"
            android:onClick="bottomBar" />

        <Button
            android:id="@+id/btnSearchRes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/btnHome"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="bottomBar"
            android:text="Search"
            android:background="#434343"
            android:textColor="#D9D9D9" />

        <Button
            android:id="@+id/btnYourLibrary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnSearchRes"
            android:text="Your Library"
            android:textColor="#6DFD6F"
            android:background="#434343"
            android:clickable="false" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:id="@+id/tvViewPlaylists"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="viewPlayLists"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
