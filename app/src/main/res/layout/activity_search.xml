<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity">


    <EditText
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:id="@+id/etSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_toLeftOf="@+id/btnSearchRes"
        android:layout_toStartOf="@+id/btnSearchRes" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnSearchRes"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_alignBottom="@+id/etSearch"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:onClick="searchBtn" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvSearchResult"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/relativeLayout2"
        android:background="#FFFFFF"
        android:layout_below="@+id/etSearch"
        android:headerDividersEnabled="false"
        android:choiceMode="singleChoice" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#434343"
        android:id="@+id/relativeLayout2">

        <Button
            android:id="@+id/btnHome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:onClick="bottomBar"
            android:text="Home"
            android:background="#434343"
            android:textColor="#D9D9D9" />

        <Button
            android:id="@+id/btnSearch"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/btnHome"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:text="Search"
            android:textColor="#6DFD6F"
            android:background="#434343" />

        <Button
            android:id="@+id/btnYourLibrary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:onClick="bottomBar"
            android:text="Your Library"
            android:background="#434343"
            android:textColor="#D9D9D9"
            android:layout_alignTop="@+id/btnSearch"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
